Bootstrap: docker
From: mambaorg/micromamba

%files
    rigscore.yml /rigscore.yml

%post
 apt-get update && apt-get install -y \
    procps

    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    export PATH=/opt/conda/bin:$PATH

    micromamba install --yes --name base --file /rigscore.yml

    rm -f /rigscore.yml

